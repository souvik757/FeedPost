<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ImageActivity.ImageUploader.ImageUploadBackGround">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/previewLayout"
            android:layout_below="@+id/saveEdit"
            android:background="@drawable/lite_border"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profileBannerBackground"
                android:scaleType="center"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <RelativeLayout
                android:background="@drawable/custom_background"
                android:layout_alignParentTop="true"
                android:layout_marginTop="200dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="12dp"
                    android:elevation="12dp"
                    app:cardCornerRadius="60dp">
                    <ImageView
                        android:id="@+id/profileDP"
                        android:layout_height="80dp"
                        android:layout_width="80dp"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/view3"
                    android:layout_below="@+id/view2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="@dimen/commonMargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/userName"
                        android:background="@color/ash"
                        android:layout_width="70dp"
                        android:layout_height="10dp"/>
                    <ImageView
                        android:id="@+id/verified"
                        android:layout_width="15dp"
                        android:layout_height="15dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/userPronounce"
                    android:layout_below="@+id/view3"
                    android:layout_marginStart="@dimen/commonMargin"
                    android:background="@color/ash"
                    android:layout_width="60dp"
                    android:layout_height="10dp"/>
                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground">
                        <ImageView
                            android:id="@+id/postNumber"
                            android:background="@color/ash"
                            android:layout_width="30dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/posts"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground">
                        <ImageView
                            android:id="@+id/followerNumber"
                            android:background="@color/ash"
                            android:layout_width="30dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/followers"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="?android:attr/selectableItemBackground">
                        <ImageView
                            android:id="@+id/followingNumber"
                            android:background="@color/ash"
                            android:layout_width="30dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="@string/following"/>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/userBio"
                    android:layout_below="@+id/view3"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="@dimen/commonMargin"
                    android:background="@color/ash"
                    android:layout_width="100dp"
                    android:layout_height="10dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/saveEdit"
            android:onClick="updateBackground"
            android:text="@string/save"
            android:layout_margin="@dimen/commonMargin"
            android:gravity="center"
            android:background="@drawable/lite_border"
            android:textAlignment="center"
            android:layout_width="120dp"
            android:layout_height="60dp"/>
        <ProgressBar
            android:id="@+id/pBar"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/previewLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/commonMargin"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:theme="@style/Theme.Material3.Dark"
            android:onClick="selectFromDevice"
            android:text="@string/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/commonMargin"/>
    </RelativeLayout>
</ScrollView>