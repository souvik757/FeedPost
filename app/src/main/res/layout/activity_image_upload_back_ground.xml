<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_profile_gradient"
    android:fillViewport="true"
    tools:context=".ImageActivity.ImageUploader.ImageUploadBackGround">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="@dimen/commonMargin"
            android:layout_marginTop="@dimen/commonMargin"
            android:layout_gravity="center"
            android:onClick="previousActivity"
            android:background="@drawable/cancel"
            android:backgroundTint="@color/white"/>
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/commonMargin"
            android:background="@color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/feedpost" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/previewLayout"
            android:layout_below="@+id/saveEdit"
            android:background="@drawable/lite_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profileBannerBackground"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />
            <androidx.cardview.widget.CardView
                android:layout_marginTop="150dp"
                android:layout_marginStart="30dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardBackgroundColor="@color/ashBlack">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <TextView
            android:id="@+id/saveEdit"
            android:onClick="updateBackground"
            android:layout_below="@+id/header"
            android:text="@string/save"
            android:layout_margin="@dimen/commonMargin"
            android:gravity="center"
            android:background="@drawable/lite_border"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="60dp"/>
        <ProgressBar
            android:id="@+id/pBar"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/previewLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/commonMargin"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:theme="@style/Theme.Material3.Dark"
            android:onClick="selectFromDevice"
            android:text="@string/select"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/commonMargin"/>
    </RelativeLayout>
</ScrollView>