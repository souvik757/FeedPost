<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".OthersProfile.OthersProfileActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:onClick="finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_48"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"/>
        <RelativeLayout
            android:id="@+id/bglayout"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/backgroundBanner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/bglayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/usersProfileName"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/usersProfileGender"
                android:textSize="12sp"
                android:textColor="@color/sky"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/view2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="30dp"
                android:elevation="12dp"
                app:cardCornerRadius="60dp">
                <ImageView
                    android:id="@+id/usersProfilePic"
                    android:layout_height="120dp"
                    android:layout_width="120dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <TextView
            android:id="@+id/usersProfileBio"
            android:textSize="16sp"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/commonMargin"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/usersProfileBio"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/usersProfilePostNumber"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/posts"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:id="@+id/usersProfileFollowerNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followers"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transparent">
                <TextView
                    android:id="@+id/usersProfileFollowingNumber"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/following"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/usersUploadGrid"
            android:background="@color/transparent"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"/>
        <ProgressBar
            android:id="@+id/profileFetching"
            android:visibility="gone"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="90dp"
            android:layout_below="@+id/layout2"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/followUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="follow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/commonMargin"
        android:layout_marginEnd="@dimen/commonMargin"/>
</RelativeLayout>