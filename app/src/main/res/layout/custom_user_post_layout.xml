<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/idRLHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/idCV1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="15dp">
                <ImageView
                    android:id="@+id/idIVHeaderProfilePiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/idTVHeaderProfileName"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/idCV1"/>
            <Button
                android:id="@+id/idBTNHeaderThreeDots"
                android:background="@drawable/three_dots"
                android:backgroundTint="?android:attr/selectableItemBackground"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/blue"
            android:layout_below="@+id/idRLHeader"/>
        <ImageView
            android:id="@+id/idIVPost"
            android:layout_below="@+id/separator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:fitsSystemWindows="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/l2"
            android:layout_below="@+id/idIVPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/idLikeForPost"
                android:text="like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:checkable="true"
                android:background="@drawable/baseline_favorite_border_24"
                android:backgroundTint="@drawable/like_toggle"/>

            <TextView
                android:id="@+id/idLikeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="11sp" />

            <Button
                android:id="@+id/idCommentForPost"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/commonMargin"
                android:checkable="true"
                android:background="@drawable/baseline_message_24"
                android:backgroundTint="@drawable/like_toggle"/>
            <TextView
                android:id="@+id/idCommentCount"
                android:layout_gravity="start"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/idMyCommentLayout"
            android:visibility="gone"
            android:layout_below="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:elevation="@dimen/commonPadding"
                app:cardMaxElevation="@dimen/commonMargin"
                app:cardCornerRadius="35dp">
                <ImageView
                    android:id="@+id/idIVCommentProfilePicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/idMyCommentForPost"
                android:textSize="11sp"
                android:layout_marginStart="1dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/idPBMyPosts"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
</LinearLayout>