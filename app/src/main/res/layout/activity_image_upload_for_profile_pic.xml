<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/edit_profile_gradient"
    tools:context=".ImageActivity.ImageUploader.ImageUploadForProfilePic">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="@dimen/commonMargin"
            android:layout_marginTop="@dimen/commonMargin"
            android:layout_gravity="center"
            android:onClick="prevActivity"
            android:background="@drawable/cancel"
            android:backgroundTint="@color/white"/>
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/commonMargin"
            android:background="@color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/feedpost" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/createPost"
            android:onClick="uploadPhoto"
            android:layout_below="@+id/header"
            android:text="@string/save"
            android:layout_margin="@dimen/commonMargin"
            android:gravity="center"
            android:background="@drawable/lite_border"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="60dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/preview"
            android:layout_below="@+id/createPost"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardCornerRadius="200dp"
            android:elevation="12dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/profilePreview"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>
        </androidx.cardview.widget.CardView>
        <ProgressBar
            android:id="@+id/ShowProgress"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/preview"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:theme="@style/Theme.Material3.Dark"
            android:onClick="selectPhotoFromDevice"
            android:text="@string/select"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/commonMargin"/>
    </RelativeLayout>
</ScrollView>